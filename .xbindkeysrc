# -*- shell-script -*-

###########################
###### Applications #######
###########################

"urxvt"
  Control + Alt + Return


"urxvt -e ssh celsius"
  Mod4 + 1

"chromium-browser"
  Mod4 + 2

"urxvt -e emacs -nw"
  Mod4 + 3


###########################
######### Display #########
###########################

"~/.scripts/brightness -i 10"
  XF86MonBrightnessUp

"~/.scripts/brightness -d 10"
  XF86MonBrightnessDown


###########################
########## Audio ##########
###########################

"amixer set Master 5+"
  XF86AudioRaiseVolume

"amixer set Master 5-"
  XF86AudioLowerVolume

"amixer set Master toggle"
  XF86AudioMute


###########################
######### Desktop #########
###########################

"sudo pm-suspend & slock"
  XF86PowerOff

"slock"
  Control + Alt + l

"~/.scripts/invert-theme"
  Control + Alt + i


###########################
########## Other ##########
###########################

"scrot"
  Print